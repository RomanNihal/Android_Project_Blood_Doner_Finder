<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.beADonor.beADonorFragment">


    <ScrollView
        android:id="@+id/scrollView23"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:id="@+id/linearLayout23"
            android:layout_width="368dp"
            android:layout_height="406dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-180dp"
            tools:layout_editor_absoluteY="-142dp">

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Select your Location and Blood Group"
                android:textColor="#393E46"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpCreateButton"
                app:layout_constraintVertical_bias="0.206">

                <TextView
                    android:id="@+id/hh3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Division"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/beADonorDivision"
                    android:layout_width="165dp"

                    android:layout_height="40dp"
                    android:background="@android:drawable/btn_dropdown" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lg3"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpCreateButton"
                app:layout_constraintVertical_bias="0.206">

                <TextView
                    android:id="@+id/hhh3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="District"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/beADonorDistrict"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:background="@android:drawable/btn_dropdown" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lgg3"
                android:layout_width="300dp"
                android:layout_height="30dp"
android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpCreateButton"
                app:layout_constraintVertical_bias="0.206">

                <TextView
                    android:id="@+id/hhhh3"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/beADonorBloodGroup"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:background="@android:drawable/btn_dropdown" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="\n!!! If you have donated blood before click the checkbox to OK and give the last donation date.\n\n!!! If you haven't donated yet, you can just create account without clicking anything further."
                android:textColor="#393E46"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/beADonorCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ubuntu_bold"
                android:onClick="signUpDonorCheckBox"
                android:text="Donated"
                android:textSize="18sp" />

            <DatePicker
                android:id="@+id/beADonorDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:headerBackground="@color/purple_500"
                android:layout_marginTop="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/beADonorImage"
                    android:layout_width="136dp"
                    android:layout_height="131dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/PDChooseButton"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Cost"
                    app:srcCompat="@drawable/avatar" />

                <Button
                    android:id="@+id/beADonorImageButton"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="70dp"
                    android:layout_weight="1"
                    android:onClick="signUpPictureChoosingButton"
                    android:text="Choose Picture" />

            </LinearLayout>

            <Button
                android:id="@+id/beADonorCreateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:backgroundTint="@color/purple_500"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Create account"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                 />


        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/beADonorProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="159dp"
        android:layout_height="124dp"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>