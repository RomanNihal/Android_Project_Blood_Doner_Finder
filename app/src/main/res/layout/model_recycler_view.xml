<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#EEEEEE"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/modelRecyclerViewImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/blood_donation" />

            <TextView
                android:id="@+id/modelRecyclerViewUserName"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/modelRecyclerViewImageView"
                android:fontFamily="@font/ubuntu_bold"
                android:foregroundGravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/modelRecyclerViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/modelRecyclerViewUserName"
                android:layout_marginStart="10dp"

                android:layout_toEndOf="@+id/modelRecyclerViewImageView"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/modelRecyclerViewBloodGroup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/modelRecyclerViewUserName"
                android:layout_marginLeft="10dp"

                android:layout_toEndOf="@+id/modelRecyclerViewPhone"
                android:drawablePadding="2dp"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:text="ab+"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/modelRecyclerViewCallButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="9dp"
                android:scaleType="centerCrop"
                android:src="@drawable/phone" />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>